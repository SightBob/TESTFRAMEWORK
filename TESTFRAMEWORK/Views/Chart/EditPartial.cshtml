@model TESTFRAMEWORK.Models.DepartmentViewModel

@using (Html.BeginForm("SaveDepartment", "Chart", FormMethod.Post, new { id = "editForm" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <h5 class="modal-title">แก้ไขข้อมูลฝ่าย</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">
        @Html.HiddenFor(m => m.Id) <!-- ซ่อน ID -->
        <!-- ชื่อฝ่าย -->
        <div class="mb-3">
            @Html.LabelFor(m => m.DepartmentName, "ชื่อฝ่าย")
            @Html.TextBoxFor(m => m.DepartmentName, new { @class = "form-control" })
        </div>

        <!-- กลุ่มงาน -->
        <div class="mb-3">
            @Html.LabelFor(m => m.WorkGroupId, "กลุ่มงาน")
            @Html.DropDownListFor(m => m.WorkGroupId, ViewBag.WorkGroupList as SelectList, "-- เลือกกลุ่มงาน --", new { @class = "form-control" })
        </div>

        <!-- ✅ สถานะ -->
        <div class="mb-3">
            @Html.LabelFor(m => m.StatusId, "สถานะ")
            @Html.DropDownListFor(m => m.StatusId, ViewBag.StatusList as SelectList, "-- เลือกสถานะ --", new { @class = "form-control" })
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
        <button type="submit" class="btn btn-primary">บันทึก</button>
    </div>
}
