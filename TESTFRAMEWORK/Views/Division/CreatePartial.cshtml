@model TESTFRAMEWORK.Models.DivisionViewModel

@using (Html.BeginForm("CreateDivision", "Division", FormMethod.Post, new { id = "createForm" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <h5 class="modal-title">เพิ่มแผนกใหม่</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">
        <div class="mb-3">
            @Html.LabelFor(m => m.DepartmentId, "เลือกฝ่าย")
            @Html.DropDownListFor(m => m.DepartmentId, ViewBag.DepartmentList as SelectList, "-- เลือกฝ่าย --", new { @class = "form-control" })
        </div>
      
        <div class="mb-3">
            @Html.LabelFor(m => m.DivisionName, "ชื่อแผนก")
            @Html.TextBoxFor(m => m.DivisionName, new { @class = "form-control" })
        </div>


        <div class="mb-3">
            @Html.LabelFor(m => m.StatusId, "สถานะ")
            @Html.DropDownListFor(m => m.StatusId, ViewBag.StatusList as SelectList, "-- เลือกสถานะ --", new { @class = "form-control" })
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
        <button type="submit" class="btn btn-primary">บันทึก</button>
    </div>
}
