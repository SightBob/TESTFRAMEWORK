@model List<TESTFRAMEWORK.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    body {
        font-family: 'Kanit', sans-serif;
        background-color: #f5f7fa;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .table {
        border-radius: 8px;
        overflow: hidden;
        background-color: #fff;
    }

        .table thead {
            background-color: #F26522;
            color: white;
        }

        .table th, .table td {
            vertical-align: middle;
            padding: 12px;
        }

        .table tbody tr {
            transition: background-color 0.2s ease;
        }

            .table tbody tr:hover {
                background-color: #f8f9fa;
            }

    .btn-custom {
        background-color: #F26522;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-custom:hover {
            background-color: #d7541e;
            transform: translateY(-2px);
        }

    .btn-warning {
        background-color: #ffc107;
        border: none;
        border-radius: 6px;
        font-weight: 500;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        border-radius: 6px;
        font-weight: 500;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .modal-content {
        border-radius: 12px;
        border: none;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
        border-bottom: none;
        padding-bottom: 0;
    }

    .modal-title {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 0.95rem;
    }

        .form-control:focus {
            border-color: #F26522;
            box-shadow: 0 0 0 0.2rem rgba(242, 101, 34, 0.25);
        }

    .btn-primary {
        background-color: #F26522;
        border: none;
        border-radius: 8px;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #d7541e;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        border-radius: 8px;
        font-weight: 500;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .table th, .table td {
            font-size: 0.9rem;
            padding: 8px;
        }

        .btn-custom {
            padding: 8px 16px;
            font-size: 0.9rem;
        }
    }

    .modal {
        --bs-modal-margin: 6.75rem !important;
        --bs-modal-box-shadow: var(--bs-box-shadow);
    }

    .form-control {
        padding-top: 0px !important;
        padding-bottom: 0px !important;
    }

</style>

<!-- Scripts -->

<div class="container-xxl flex-grow-1 container-p-y mt-xl-5">
    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-4 fade-in">
                <div class="d-flex justify-content-between align-items-center p-3">
                    <h3 class="fw-bold text-dark">📑 ตารางเก็บข้อมูลวิจัย</h3>
                    <div class="d-flex align-items-center gap-3">
                        <button class="btn btn-custom text-white d-flex align-items-center gap-2"
                                data-bs-toggle="modal" data-bs-target="#registerModal">
                            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16" fill="currentColor" class="bi bi-plus icon-thicker m-md-1" viewBox="0 0 16 16">
                                <path d="M8 1a.5.5 0 0 1 .5.5v6h6a.5.5 0 0 1 0 1h-6v6a.5.5 0 0 1-1 0v-6h-6a.5.5 0 0 1 0-1h6v-6A.5.5 0 0 1 8 1z" stroke="white" stroke-width="1.5" />
                            </svg>
                            เพิ่มข้อมูล
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ชื่อผู้ใช้</th>
                                <th>บทบาท</th>
                                <th class="text-center">การจัดการ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Username</td>
                                    <td id="role-@user.UserId">@user.Role</td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-warning edit-btn" data-id="@user.UserId">แก้ไข</button>
                                        @Html.ActionLink("ลบ", "Delete", new { id = user.UserId }, new { onclick = "return confirm('คุณแน่ใจหรือไม่?');", @class = "btn btn-sm btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Role Modal -->
<div class="modal" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">แก้ไขบทบาท</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editUserId" />
                    <div class="mb-3">
                        <label class="form-label">ชื่อผู้ใช้</label>
                        <input type="text" class="form-control" id="editUsername" disabled />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">บทบาท</label>
                        <select class="form-control" id="editRole" required>
                            <option value="Admin">ผู้ดูแล</option>
                            <option value="User">ผู้ใช้</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">บันทึก</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Register Modal -->
<div class="modal" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content p-4">
            <div class="modal-header">
                <h5 class="modal-title" id="registerModalLabel">สมัครสมาชิก</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="registerForm" action="@Url.Action("Register", "Auth")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label" for="username">ชื่อผู้ใช้</label>
                        <input type="text" name="username" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">รหัสผ่าน</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="confirmPassword">ยืนยันรหัสผ่าน</label>
                        <input type="password" name="confirmPassword" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">สมัครสมาชิก</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script>
    // Edit Role Modal
    let editModal = new bootstrap.Modal(document.getElementById('editModal'));

    $('.edit-btn').click(function () {
        const id = $(this).data('id');
        $.get('/ManageUser/GetUser', { id: id }, function (data) {
            if (data) {
                $('#editUserId').val(data.UserId);
                $('#editUsername').val(data.Username);
                $('#editRole').val(data.Role);
                editModal.show();
            }
        });
    });

    $('#editForm').submit(function (e) {
        e.preventDefault();
        const id = $('#editUserId').val();
        const role = $('#editRole').val();
        $.post('/ManageUser/UpdateRole', { id: id, role: role }, function (response) {
            if (response.success) {
                $('#role-' + id).text(role);
                editModal.hide();
            } else {
                alert('ไม่สามารถอัปเดตบทบาทได้');
            }
        });
    });

    // Register Modal - AJAX
    $(document).ready(function () {
        $('#registerForm').submit(function (e) {
            e.preventDefault();
            const form = $(this);
            const formData = form.serialize();
            $.ajax({
                type: 'POST',
                url: form.attr('action'),
                data: formData,
                success: function (response) {
                    if (response.success) {
                        $('#registerModal').modal('hide');
                        alert("✅ สมัครสมาชิกสำเร็จ: " + response.message);
                        location.reload();
                    } else {
                        alert("❌ ไม่สามารถสมัครสมาชิกได้: " + response.message);
                    }
                },
                error: function () {
                    alert("เกิดข้อผิดพลาดขณะส่งข้อมูล กรุณาลองใหม่อีกครั้ง");
                }
            });
        });
    });
</script>