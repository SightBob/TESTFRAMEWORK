    <!-- Custom Scripts -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Initialize Select2
            $('.select2').select2();

            // Initialize DataTables with error handling
            if ($.fn.DataTable) {
                $('table.dataTable').each(function () {
                    try {
                        $(this).DataTable();
                    } catch (e) {
                        console.warn("DataTable initialization failed:", e);
                    }
                });
            }

            // Menu highlighting
            const currentPath = window.location.pathname.replace(/\/$/, "");
            document.querySelectorAll(".menu-item a").forEach(link => {
                if (link.href.includes("javascript:void(0)")) return;
                try {
                    const linkPath = new URL(link.href).pathname.replace(/\/$/, "");
                    if (linkPath === currentPath) {
                        link.style.background = "#F26522";
                        link.style.color = "#FFFFFF";
                        const parentSubMenu = link.closest(".menu-sub");
                        if (parentSubMenu) {
                            const parentMenuItem = parentSubMenu.closest(".menu-item");
                            if (parentMenuItem) {
                                const parentMenuLink = parentMenuItem.querySelector("a.menu-toggle");
                                if (parentMenuLink) {
                                    parentMenuLink.style.color = "#F26522";
                                }
                            }
                        }
                    }
                } catch (e) {
                    console.warn("Error processing menu link:", e);
                }
            });

            // Lazy load images
            const images = document.querySelectorAll('img[data-src]');
            images.forEach(img => {
                img.src = img.dataset.src;
            });

            // Safeguard for template-customizer
            if (typeof TemplateCustomizer !== 'undefined') {
                try {
                    const customizer = new TemplateCustomizer();
                } catch (e) {
                    //console.warn("TemplateCustomizer initialization failed:", e);
                }
            }

            // Safeguard for main.js pages access
            if (typeof someObject !== 'undefined' && someObject) {
                if (someObject.pages) {
                    // Your logic for accessing someObject.pages
                } else {
                    console.warn("someObject.pages is undefined");
                }
            }
        });
    </script>

