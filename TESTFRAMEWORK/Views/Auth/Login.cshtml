@{
    ViewBag.Title = "Login";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded" style="width: 400px;">
        <h2 class="text-center mb-4">Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            <div class="mb-3">
                @Html.Label("Username", new { @class = "form-label" })
                @Html.TextBox("username", "", new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                @Html.Label("Password", new { @class = "form-label" })
                @Html.Password("password", "", new { @class = "form-control", required = "required" })
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        }

        <p class="text-center mt-3">
            ยังไม่มีบัญชี? <a href="@Url.Action("Register", "Auth")">สมัครสมาชิก</a>
        </p>
    </div>
</div>

<!-- Bootstrap JS (Optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
