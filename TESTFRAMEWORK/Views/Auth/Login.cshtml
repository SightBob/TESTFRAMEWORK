@{
    ViewBag.Title = "Login";
}
<head>
    <meta name="description" content="ระบบจัดการงานวิจัย มหาวิทยาลัย XYZ">
</head>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded" style="width: 400px;">
        <h2 class="text-center mb-4">เข้าสู่ระบบ</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()
            
                <div class="mb-3">
            <label for="username" class="form-label">ชื่อผู้ใช้</label>
            @Html.TextBox("username", "", new { 
                @class = "form-control", 
                id = "username",
                required = "required",
                aria_label = "กรุณากรอกชื่อผู้ใช้"
            })
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">รหัสผ่าน</label>
            @Html.Password("password", "", new { 
                @class = "form-control", 
                id = "password",
                required = "required",
                aria_label = "กรุณากรอกรหัสผ่าน"
            })
        </div>

            <button type="submit" class="btn btn-primary w-100">เข้าสู่ระบบ</button>
        }
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
} 